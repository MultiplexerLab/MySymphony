<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:id="@+id/LinearLayout_RV_cricket_fragment"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/imgSportsCricket"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kheladhula_cricket_1" />

    <TextView
        android:id="@+id/kheladhulaCricketTV"
        android:layout_gravity="center"
        android:text="স্মার্ট থীম প্যাক"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/strikeThroughText"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="৳১৫" />

        <TextView
            android:textColor="@color/green"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="৳১০" />
    </LinearLayout>
</LinearLayout>