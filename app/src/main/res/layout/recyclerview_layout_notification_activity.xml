<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:padding="1dp"
    android:layout_height="80dp">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/notification_icon_red"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleNotification"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginTop="10dp"
                android:text="ট্র‍্যানজেক্শন সম্পন্ন হয়েছে"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/timeNotification"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="১২ মিনিট আগে"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/descNotification"
            android:text="আপনার ৫৩৪৫৬৭ তম ট্রানজেকশন সম্পন্ন হয়েছে "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>


    </LinearLayout>



</LinearLayout>