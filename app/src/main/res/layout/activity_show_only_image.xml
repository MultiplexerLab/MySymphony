<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    tools:context=".Activity.ShowOnlyImage">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbarlayoutinonlyimage"
            layout="@layout/toolbar_layout_in_only_image_activity"
            />

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_weight="0"
        android:layout_margin="15dp"
        android:id="@+id/imageInOnlyImage"
        android:layout_width="match_parent"
        android:layout_height="330dp" />

    <Button
        android:layout_weight="0"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="5dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="@color/White"
        android:text="ওয়ালপেপার হিসেবে ব্যাবহার করতে এখানে ক্লিক করুন"
        android:background="@drawable/btn_style_red"
        android:layout_width="320dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:onClick="setAsAWallpaper"
        android:layout_height="wrap_content" />

</LinearLayout>