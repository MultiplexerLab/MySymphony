<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Halka_Gray"
    android:orientation="vertical"
    tools:context=".Activity.PaymentMethod">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fitsSystemWindows="true">

            <include
                android:id="@+id/toolbarlayoutinpin"
                layout="@layout/toolbar_layout_in_pin" />

        </android.support.design.widget.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/payWithPin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/paymentButtOn_Size"
                    android:background="@color/White"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/pin_pay" />
                <ImageButton
                    android:id="@+id/payWithBikash"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/paymentButtOn_Size"
                    android:layout_marginLeft="8dp"
                    android:background="@color/White"
                    android:padding="15dp"
                    android:paddingLeft="8dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/bkash" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/payWithRocket"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/paymentButtOn_Size"

                    android:background="@color/White"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/rocket_logo" />

                <ImageButton
                    android:id="@+id/payWithMaxis"
                    android:layout_marginLeft="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/paymentButtOn_Size"
                    android:background="@color/White"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/maxis_logo" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/payWithVisa"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/paymentButtOn_Size"
                    android:background="@color/White"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/visa" />

                <ImageButton
                    android:id="@+id/payWithMasterCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/paymentButtOn_Size"
                    android:layout_marginLeft="8dp"
                    android:background="@color/White"
                    android:padding="15dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/mastercard" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button

        android:layout_margin="10dp"
        android:text="নেক্সট"
        android:onClick="payMent"
        android:textColor="@color/White"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/btn_style_red"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>