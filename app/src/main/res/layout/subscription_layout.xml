<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayoutInHomepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true">

        <include
            android:id="@+id/toolbarlayoutinhome_page"
            layout="@layout/toolbar_layout_in_subscription" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp">

        <TextView
            android:id="@+id/weeklyText"
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:text="" />

        <Button
            android:id="@+id/weeklySubscription"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_style_red"
            android:text="সাপ্তাহিক সাবস্ক্রিপশন"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/White"
            android:visibility="visible" />

        <TextView
            android:id="@+id/monthlyText"
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:layout_marginTop="140dp"
            android:text="" />

        <Button
            android:id="@+id/monthlySubscription"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/btn_style_red"
            android:text="মাসিক সাবস্ক্রিপশন"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/White"
            android:visibility="visible" />

        <TextView
            android:id="@+id/yearlyText"
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:layout_marginTop="260dp"
            android:text="" />

        <Button
            android:id="@+id/yearlySubscription"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="290dp"
            android:background="@drawable/btn_style_red"
            android:text="বাৎসরিক সাবস্ক্রিপশন"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/White"
            android:visibility="visible" />

    </RelativeLayout>
</LinearLayout>
