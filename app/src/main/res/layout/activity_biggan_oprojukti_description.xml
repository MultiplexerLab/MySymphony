<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ContentDescriptionActivity.BigganOProjuktiDescriptionActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarLayoutInBigganOProjuktiDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fitsSystemWindows="true">
        <include
            android:id="@+id/toolbarlayoutinnewsDescription"
            layout="@layout/toolbar_layout_in_news_description" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbarLayoutInBigganOProjuktiDescription">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/imgBigganOProjuktiDescription"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kheladhula_2" />
            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/newsTitleBigganOProjuktiDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="বিস্তারিত"
                android:textColor="@color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <!--<TextView-->
            <!--android:id="@+id/newsPublishedatPachMishaliDescription"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="1dp"-->
            <!--android:text="বিস্তারিত"-->
            <!--android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />-->

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/newsdescriptionBigganOProjuktiDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="ক্রিকেট দুনিয়ার নানান ধরনের দারুন সব খবর নিয়ে আমাদের এই আয়োজন"
                android:textColor="@color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        </LinearLayout>
</ScrollView>
    </RelativeLayout>