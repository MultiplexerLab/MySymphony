<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">

    <android.support.v7.widget.CardView
        android:id="@+id/goromKhoborCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:orientation="horizontal"
            android:padding="1dp">

            <ImageView
                android:id="@+id/imgGoromKhobor"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:padding="5dp"
                android:src="@drawable/kheladhula_cricket_2" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleGoromKhobor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="70dp"
                    android:text="চ্যাম্পিয়ন্স ট্রফিতে যাদের বিরুদ্ধে খেলবে বাংলাদেশ"
                    android:textColor="@color/black"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/publishedAtGoromKhobor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 Sep 2017 "
                        android:textSize="15sp" />


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>