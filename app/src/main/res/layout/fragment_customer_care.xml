<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/Halka_Gray"
    tools:context=".Fragment.CustomerCareFragment">

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@color/White"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_search"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="এলাকা অনুযায়ী সার্চ করুন"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_margin="8dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="আপনার নিকটস্থ-"
        android:textColor="@color/Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:background="@color/White"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customerCareFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="D"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/White" />

            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginRight="7dp"
                    android:layout_weight=".3"
                    android:layout_gravity="center"
                    android:layout_width="210dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/titleCustomerCare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dhaka Mirpur"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/addressCustomerCare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="4dp"
                        android:text="Rangs babylonia ,Level 6-9,246 Bir uttom Mir Shawkat Road,Tejgao I/A Dhaka 1208 "
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                </LinearLayout>

                <ImageView
                    android:layout_weight=".01"
                    android:layout_gravity="center"
                    android:src="@drawable/right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="2dp"/>
            </LinearLayout>

        </LinearLayout>

    <TextView
        android:layout_margin="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="অন্যান্য-"
        android:textColor="@color/Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:background="@color/White"
        android:id="@+id/RV_customerCareFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>


</LinearLayout>