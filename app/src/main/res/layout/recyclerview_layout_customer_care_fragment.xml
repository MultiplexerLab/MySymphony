<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp">


    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customerCareFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_textview"
            android:gravity="center"
            android:text="D"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/White" />

        <LinearLayout
            android:layout_marginLeft="9dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginRight="9dp"
                android:layout_weight=".3"
                android:layout_gravity="center"
                android:layout_width="210dp"
                android:layout_height="128dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleCustomerCare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dhaka Mirpur"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black" />


                <TextView
                    android:id="@+id/addressCustomerCare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="4dp"
                    android:text="Rangs babylonia ,Level 6-9,246 Bir uttom Mir Shawkat Road,Tejgao I/A Dhaka 1208 "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            </LinearLayout>

            <ImageView
                android:layout_weight=".01"
                android:layout_gravity="center"
                android:src="@drawable/right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="2dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>